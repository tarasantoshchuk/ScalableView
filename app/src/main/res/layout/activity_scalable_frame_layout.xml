<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#aaa" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <io.github.tarasantoshchuk.scalableview.app.util.ScalableTestHelperView
        android:id="@+id/test_helper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <io.github.tarasantoshchuk.scalableview.app.example.ScalableFrameLayout
        android:id="@+id/example_scalable_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#fff"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="#000"
        android:text="ScalableTextView \nTo Scale \nFor Example"
        android:lines="3"
        app:layout_constraintBottom_toTopOf="@+id/test_helper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_show_toast"
            android:text="Click to show Toast"
            android:layout_gravity="center"/>

    </io.github.tarasantoshchuk.scalableview.app.example.ScalableFrameLayout>
</android.support.constraint.ConstraintLayout>